<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.local.k8s-rancher-dns</string>

    <key>ProgramArguments</key>
    <array>
      <!-- Update this path to the absolute path of update-k8s-rancher-dns.sh on your machine -->
      <string>/Users/yourname/repos/cafe-lean/scripts/update-k8s-rancher-dns.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <!-- Re-run every 60 seconds to catch IP changes. Adjust as needed. -->
    <key>StartInterval</key>
    <integer>60</integer>

    <key>StandardOutPath</key>
    <string>/tmp/com.local.k8s-rancher-dns.out.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/com.local.k8s-rancher-dns.err.log</string>
  </dict>
  </plist>

